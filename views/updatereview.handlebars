<section>
    <p class="card-title">Update A Review!</p>
    <ul>
        <li class="card-title">Review title: {{review.review_title}}</li>
        <li>Review text: {{review.review_text}}</li>
        <li id="user">Review user name: {{review.user.username}}</li>
        <li id="gamename">Review game name: {{review.game.game_name}}</li>
        <li>Date of review: {{review.review_date}}</li>
    </ul>

<form id="update-review-form">

<h4> Rating for Game: </h4>
<div class="rating-container">
  <input type="radio" class="radio-star" name="rate" id="rate-5" value="5">
  <label for="rate-5" class="fa-solid fa-star"></label>
  <input type="radio" class="radio-star" name="rate" id="rate-4" value="4">
  <label for="rate-4" class="fa-solid fa-star"></label>
  <input type="radio" class="radio-star" name="rate" id="rate-3" value="3">
  <label for="rate-3" class="fa-solid fa-star"></label>
  <input type="radio" class="radio-star" name="rate" id="rate-2" value="2">
  <label for="rate-2" class="fa-solid fa-star"></label>
  <input type="radio" class="radio-star" name="rate" id="rate-1" value="1">
  <label for="rate-1" class="fa-solid fa-star"></label>
</div>
 
  <input type="hidden" name="review-id" value="{{review.id}}" />
  
  <div class="input-group m-2 p-2">
  <label class="m-2 p-2">New Review Title:</label><br>
  <input type="text" id="title" class="form-control" placeholder="Type review title here"><br>
  </div>
  
  <div class="input-group m-2 p-2" style="height: 300px">
  <label for="review" class="m-2 p-2">New Review:</label><br>
  <input type="text" id="newreview"  class="form-control" placeholder="Type review here" aria-label="With textarea"><br><br>
  </div>
  
   <button type="submit" class="btn-primary btn">Update</button>
</form>
</section>

<script src="/js/updateReview.js"></script>
