<div class="row">
    <div class="login-card card m-2">
        <h2 class="page-title my-2">Login </h2>
        <form class="form login-form">
            <div class="form-group">
                <label for="email-login" class="form-label text-start">Email:</label>
                <input class="form-input m-2 form-control" type="email" placeholder="name@example.com" id="email-login" />
            </div>
            <div class="form-group">
                <label for="password-login" class="form-label text-start">Password:</label>
                <input class="form-input form-control  m-2" type="password" placeholder="password" id="password-login" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary m-2" type="submit">login</button>
            </div>
        </form>
    </div>
    <div class="login-card card m-2">
        <h2 class="page-title my-2">Signup</h2>
        <form class="form signup-form">
            <div class="form-group">
                <label for="username-signup" class="form-label text-start">Username:</label>
                <input class="form-input form-control m-2" type="text" id="username-signup" placeholder="username" />
            </div>
            <div class="form-group">
                <label for="email-signup" class="form-label text-start">Email:</label>
                <input class="form-input m-2 form-control" placeholder="name@email.com" type="email" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup" class="form-label text-start">Password:</label>
                <input class="form-input m-2 form-control" type="password" placeholder="password" id="password-signup" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary m-2" type="submit">signup</button>
            </div>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>