<section>
    <h2 class=""> All reviews </h2>
   
    <div class="card-container col-sm-6 mb-3 mb-sm-0 d-inline-flex flex-wrap" style="width: 90%">
    {{#each reviews as |review|}}
    <div class="card m-2 border border-primary" style="width: 25rem;">
        <li class="card-header bg-primary-subtle fs-4"><a href="./reviews/{{review.id}}" class=" bg-primary-subtle "> "{{review.review_title}}" </a></li>
        {{!-- <li>Review: {{review.review_text}}</li> --}}
    <ul>
        
<span class="badge bg-primary-subtle border border-primary  text-primary fs-6 m-2 rounded-pill ">
        {{! make stars for the review_rating }}
        {{#if (eq review.review_rating 1)}}
            <li>★☆☆☆☆</li>
        {{else if (eq review.review_rating 2)}}
            <li>★★☆☆☆</li>
        {{else if (eq review.review_rating 3)}}
            <li>★★★☆☆</li>
        {{else if (eq review.review_rating 4)}}
            <li>★★★★☆</li>
        {{else if (eq review.review_rating 5)}}
            <li>★★★★★</li>
        {{/if}}
</span>
        <li>For:<a href="./games/{{review.game.id}}"> {{review.game.game_name}}</a> </li>
        {{log review.game}}
        <li>by: {{review.user.username}}</li>
        <li>On: {{format_date review.review_date}}</li>
    </ul>  
        
    </div>
    {{/each}}
    </div>
    

</section>